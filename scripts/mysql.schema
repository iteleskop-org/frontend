# Lista uzytkownikow
CREATE TABLE users (
    # identyfikator uzytkownika
    user_id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,

    # login
    login VARCHAR(32),

    # haslo
    pass VARCHAR(32),

    # Imie
    firstname VARCHAR(32),

    # Nazwisko
    lastname VARCHAR(32),

    # Procentowy udzial w czasie teleskopu
    share FLOAT,

    # Telefon
    phone VARCHAR(11)
);

